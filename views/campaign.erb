  <div id="firstModal" class="reveal-modal" data-reveal>

<h2>Update Track Settings</h2>
<form>
  <div class="row">
    <div class="large-12 columns">
      <label>Campaign Name
        <input type="text" placeholder="Teenagers">
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <label>Enter User Profile
        <input type="text" placeholder="Profile Admin">
      </label>
    </div>
    <div class="large-4 columns">
      <label>Site Address
        <input type="text" placeholder="www.instasqaure.com">
      </label>
    </div>
    <div class="large-4 columns">
      <div class="row collapse">
        <label>Email Address</label>
        <div class="small-9 columns">
          <input type="text" placeholder="admin@instasquare">
        </div>
        <div class="small-3 columns">
          <span class="postfix">.com</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label>Select Tracking
        <select>
          <option value="husker">Daily</option>
          <option value="starbuck">Weekly</option>
          <option value="hotdog">Monthly</option>
          <option value="apollo">Yearly</option>
        </select>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <label>Select Status</label>
      <input type="radio" id="pokemonRed" value="Red" name="pokemon"><label for="pokemonRed">Active</label>
      <input type="radio" id="pokemonBlue" value="Blue" name="pokemon"><label for="pokemonBlue">Inactive</label>
    </div>
    <div class="large-6 columns">
      <label>Additional Options</label>
      <input type="checkbox" id="checkbox1"><label for="checkbox1">Behavioural Analysis</label>
      <input type="checkbox" id="checkbox2"><label for="checkbox2">Customer Retention Stats</label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label>Notes
        <textarea placeholder="What's Up?"></textarea>
      </label>
    </div>
  </div>

    <div class="row"> <div class="small-12">  <div class="row">
  <a href="#" id="project_create_submit_button" class="radius button right">Submit</a>
  </div>  </div> </div>


</form>


